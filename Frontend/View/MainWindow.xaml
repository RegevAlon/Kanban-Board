<Window x:Class="Presentation.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="label" Content="Welcome to RNB KanbanBoard" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Login" Content="Log in" HorizontalAlignment="Center" Height="50" Margin="0,0,0,0" VerticalAlignment="Center" Width="130" Click="Login_Click"/>
        <Button x:Name="Register" Content="Register" HorizontalAlignment="Center" Height="50" Margin="0,320,0,0"  VerticalAlignment="Top" Width="130" Click="Register_Click"/>
        <Label x:Name="label2" Content="Not registered yet?" HorizontalAlignment="Center" Height="27" Margin="0,267,0,0" VerticalAlignment="Top" Width="110"/>
        <Label x:Name="label3" Content="Existing user?" HorizontalAlignment="Center" Margin="0,136,0,0"  VerticalAlignment="Top" Width="88"/>

    </Grid>
</Window>
